# Application Configuration
PORT=3000
NODE_ENV=development
APP_NAME="Accounta Backend"
APP_VERSION="1.0.0"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/accounta_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="1d"

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10

# Cloudflare R2 Storage Configuration
# Add these variables to your .env file

# Your Cloudflare R2 endpoint (replace 'your-account-id' with your actual account ID)
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# R2 API credentials (create these in Cloudflare dashboard > R2 > Manage R2 API tokens)
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-access-key
# Your R2 bucket name
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name
# Public URL for accessing files (could be your custom domain or R2 public URL)
# If using custom domain: https://your-bucket.your-domain.com
# If using R2 public URL: https://pub-xyz123.r2.dev
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.your-domain.com
